{
  "name": "iidx.io",
  "private": true,
  "scripts": {
    "lint:all": "yarn run format",
    "lint:backend": "cd backend && bundle exec rubocop",
    "format": "prettier -l '**/*.{js{,x},ts{,x},json,graphql,y{,a}ml}' '**/.babelrc'",
    "format:fix": "yarn run format --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "prettier": "1.19.0"
  }
}
