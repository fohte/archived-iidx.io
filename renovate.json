{
  "extends": ["config:base", ":label(renovate)", ":reviewer(fohte)"],
  "dockerfile": {
    "fileMatch": ["(^|/)Dockerfile[^/]*$"]
  },
  "packageRules": [
    {
      "packagePatterns": ["^@types/"],
      "excludePackageNames": ["@types/node"],
      "extends": [":automergePatch", ":automergePr"]
    },
    {
      "groupName": "graphql-code-generator",
      "packageNames": [
        "graphql-code-generator",
        "graphql-codegen-typescript-react-apollo-template"
      ]
    }
  ]
}
